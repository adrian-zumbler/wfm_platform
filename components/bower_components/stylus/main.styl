
@import 'normalize.styl/normalize.styl'
blue_pantone = #001489
orange_pantone = #ff6c2f
grey_strong = #2E2E2E
blackapp = hsl(280,17,7)
greyapp_strong = hsl(222,6,83)
greyapp_light = hsl(224,5,85)
blueapp = hsl(204,61,94)
greenapp = hsl(127,51,83)
whiteapp = hsl(280,1,98)
orangeapp = #eb6628








.margin-bottom
	margin-bottom 1em

body
	font-family 'Roboto', sans-serif
	font-weight 300
figure
	margin 0
a
	text-decoration none		
.link
	text-decoration none
	color orange_pantone
.bg
	&-orange
		background-color orange_pantone
.font
	&-size8
		font-size 10px
.wrap-container
	margin 1em		

.header-panel
	height 7em
	background-color blackapp
	//background-image url('../img/fondo.jpg')
.header-panel > *
	margin 0	
.container
	display flex
	flex-direction row
	align-content center
.button
	border-radius 3px
	background-color orangeapp
	border none
	padding 1em
	color whiteapp
	margin 1em 0
.padding-reset
	padding 0
.right
	float right		
		
	
.header
		background blackapp
		height 80px
.block
	display block
.Login
	&-formContainer
		flex-grow 1
		margin-top 5em
		margin-right 4em
		background-color white
		border-radius 2px
	&-form
		padding 3em
	&-button
		display block
		background-color transparent
		border none
		padding 0
		margin-top 1em				
.Introduction
	flex-grow 1
	width 600px
	&-mainContainer
		padding 6em
	&-imgContainer
		float left
	&-img
		height 150px
		width 300px
	&-contentContainer
	&-content
		color grey_strong
		font-weight 300

.Main-content
	height auto
	background-color whiteapp

.Search
	color blue
.ViewContent
	height 500px
	width 1000px
	border-radius 3px
	background-color whiteapp
	&-container
		overflow auto
		height 500px
				
.Header
	&-imageContainer
		float left
		
	&-img
		height 70px
		width 120px
	&-userContainer
		//background-image url('../img/fondo.jpg')
		height 150px
		text-align center
		border-bottom 3px solid greenapp
	&-avatarContainer
		padding .8em
	&-avatar
		height 80px
		width 80px
		border-radius 50%
		border 2px solid greyapp_strong
		margin 0 auto
	&-usernameContainer
		margin 0
	&-username
		font-size 1.3em
		color grey_strong			
.MainMenu
	background whiteapp
	margin-bottom 1em
	&-menu
		padding 1em
	&-list
		padding 0
		margin 0
		list-style-type none
		width 100px
	&-item
		display block
		margin 2em 1em
		width 150px
	&-link
		padding 1em
		padding-right 3em
		text-decoration none
		color grey_strong
		width 150px
		&:hover
			color orangeapp		
			text-decoration none
.Task
	margin 0.5em
	width 300px
	height 150px
	background-color whiteapp
	box-shadow 1px 1px 10px rgba(0,0,0,0.6)
	border-radius 5px
	border 1px solid greyapp_light
	display inline-block
	&-header
		border-bottom 1px solid blueapp					
	&-title			
		padding 0.5em
		color blackapp
		background-color greyapp_strong
		font-weight 300
		margin 0
	&-tagContainer
		margin-bottom 2em
	&-tagList
		list-style-type none
		padding 0.2em
	&-tagItem
		display inline
		text-decoration underline
	&-status
	&-statusName
		padding 0.5em
.add
	padding-right 2em
	text-decoration none
	
.TaskCard
	width 500px
	margin 1em
	&-url
		display block	
					
			
			
				
					

		
